[user]
  name = Jinghui Hu
  email = hujinghui@buaa.edu.cn

[push]
  default = simple

[core]
  excludesfile = ~/.gitignore_global
  attributesfile = ~/.gitattributes_global

[commit]
  template=~/.gitcommitmsg

[diff]
  algorithm = patience

[difftool]
  prompt = false

# ignore *.spl file in diff
[diff "spl"]
  binary = true
  textconv = /bin/true

[diff "word"]
  binary = true
  textconv = strings

[mergetool]
  prompt = false

[alias]
  # porcelain commands abbreviations
  c = commit
  d = diff
  s = status -s
  b = branch
  cm = commit
  bl = blame
  cl = clone
  co = checkout
  st = status

  m = merge
  mf = merge --ff
  mn = merge --no-ff

  # undo
  amend = commit --amend
  unstage = reset HEAD --

  # useful logger
  l   = log --graph --date=relative --decorate -n 9999
  ll  = log --graph --date=relative --decorate --all -n 9999
  lo  = log --graph --oneline --decorate -n 9999
  lol = log --graph --oneline --decorate -all -n 9999
  lg  = log --date=relative -n 9999

  # remote diff
  dfr = "!f() { git diff origin/$1 ^$1; }; f"
  dfl = "!f() { git diff $1 ^origin/$1; }; f"

  # list remotes
  rem = "!git config -l | grep remote.*url | tail -n +2"

  # plumbing command abbreviations
  print = cat-file -p
  sha = "!f() { find .git/objects -type f | grep -v pack | cut -b 14-15,17-; }; f"
  create-hash = hash-object -w
  assume = update-index --assume-unchanged
  noassume = update-index --no-assume-unchanged

  # list-hidden for git
  lh = "!git ls-files -v | grep '^h'"
  # list-ignored files
  li = ls-files --exclude-standard --ignored --others

  # gitignore pattern
  ignore = "!f() { curl -L -s https://www.gitignore.io/api/$@ ;}; f"

  # git repository
  remote-hub= "!f() { git remote add github git@github.com:Jeanhwea/${PWD##*/}.git; }; f"
  remote-lab= "!f() { git remote add avic ssh://git@192.168.0.202:2222/hujinghui/${PWD##*/}.git; }; f"
  hub-clone = "!f() { git clone git@github.com:Jeanhwea/$@.git; }; f"
  lab-clone = "!f() { git clone ssh://git@192.168.0.202:2222/hujinghui/$@.git; }; f"

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
